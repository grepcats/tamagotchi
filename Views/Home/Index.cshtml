<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tamagotchi!</title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
      <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1 class="center">Welcome to your Tamagotchis!</h1>
      </div>

<!--a list of tamagotchis will go here-->
    <h3>Don't neglect your CHILDREN!</h3>

      @foreach (var pet in Model)
      {
        if (pet.GetIsDead())
        {
          <h3 style="color:red">@pet.GetName() is dead! <form action="/remove/@pet.GetId()" method="post">
            <button type="submit" class="btn btn-default btn-sm">Bury?</button>
          </form></h3>
        }
        else
        {
          <h3> <a href ='/@pet.GetId()'>Take care of @pet.GetName()</a></h3>
        }
      }

      <form action="/new" method="post">
        <h3>Want to adopt a new Tamagotchi?</h3>
        <div class="form-group">
          <label for="name">Enter name</label>
          <input type="text" name="name" class="form_control">
        </div>
        <button type="submit" class="btn btn-primary">Adopt me!</button>
      </form>
    <form
    </div>

  </body>
</html>
